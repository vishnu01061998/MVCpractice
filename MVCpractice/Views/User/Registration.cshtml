@model Member


<h1> Registration User</h1>


<html>
    <head>
        <title>
           
        </title>
        <style>
            .textbox
            {
                color:orangered;
            }
        </style>
    </head>
    <body>
    <form class="form-horizontal" asp-controller="User" asp-action="Registration" method="post">
        <div class="form-group">
            <label class="control-label col-sm-2" for="Name"asp-for="Name">Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Age"asp-for="Age">Age:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Age">
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Mobile"asp-for="Mobile">Mobile:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Mobile">
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Duration"asp-for="Duration">Duration:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Duration" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Joining date"asp-for="JoiningDate">Joining date:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="JoiningDate">
                <span asp-validation-for="JoiningDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Gender"asp-for="Gender">Gender:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Gender">
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
    </body>
</html>